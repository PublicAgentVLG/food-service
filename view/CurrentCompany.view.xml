<mvc:View controllerName="food-service.food-service.controller.CurrentCompany" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
    xmlns:tnt="sap.tnt"
	displayBlock="true" 
	xmlns="sap.m">
	<Page 
		title="Поисковой Сервис Еды"
		class="freestyle-back sapUiContentPadding">
		<content>
            <VBox>
            <Title text="Управление этим предприятием" />
            </VBox>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Просмотр аналитического отчёта"
                subheader="Отчёты" press="navToChartReport">
                <TileContent footer="Отчёты по продажам">
                    <ImageContent src="sap-icon://business-objects-experience" />
                </TileContent>
            </GenericTile>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Табличный отчёт"
                subheader="Отчёты" press="navToTableReport">
                <TileContent footer="Отчёт по продажам">
                    <ImageContent src="sap-icon://table-chart" />
                </TileContent>
            </GenericTile>
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Редактирование меню"
                subheader="Управление" press="navToCurrentMenu">
                <TileContent footer="Добавление\Удаление">
                    <ImageContent src="sap-icon://edit" />
                </TileContent>
            </GenericTile>
             <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Рекомендательная система"
                subheader="ППР" press="navToRecomendation">
                <TileContent footer="Актуальные позиции">
                    <ImageContent src="sap-icon://puzzle" />
                </TileContent>
            </GenericTile>
		</content>
	</Page>
</mvc:View>